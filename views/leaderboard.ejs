<body>
    <img class="logo" src="banglogopurple.png" alt="logo">
    <br><br><br>

<script>

var userscores = <%- JSON.stringify(userscores) %>;

console.log(userscores)


function customText(userscores){
    let text = ``
    for (user of userscores) {
        let temptext = `=================================================
                        <div> Χρήστης ${user.username} </div>
                        <div> Πόντοι: ${user.points} </div>
                        <div> Tokens Προηγούμενου Μήνα: ${user.monthtokens} </div>
                        <div> Συνολικά Tokens: ${user.tokens} </div>`
        text = text.concat(temptext)

    }

    return `${text}`
}

text = customText(userscores)

document.write(text)


</script>

</body>
