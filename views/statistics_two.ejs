    <script>

    var startDate = <%- JSON.stringify(startDate) %>; 

    var endDate = <%- JSON.stringify(endDate) %>; 

    var discountlist = <%- JSON.stringify(discountlist) %>;

    var weeklabels = <%- JSON.stringify(weeklabels) %>; 

    var Cat_Sub = <%- JSON.stringify(ctg_name) %>;

    const data = {
      labels: weeklabels,
      datasets: [{
        label: 'Ποσοστό μέσης έκπτωσης',
        data: discountlist,
        backgroundColor: [
          'rgba(255, 26, 104, 0.2)',
          'rgba(54, 162, 235, 0.2)',
          'rgba(255, 206, 86, 0.2)',
          'rgba(75, 192, 192, 0.2)',
          'rgba(153, 102, 255, 0.2)',
          'rgba(255, 159, 64, 0.2)',
          'rgba(0, 0, 0, 0.2)'
        ],
        borderColor: [
          'rgba(255, 26, 104, 1)',
          'rgba(54, 162, 235, 1)',
          'rgba(255, 206, 86, 1)',
          'rgba(75, 192, 192, 1)',
          'rgba(153, 102, 255, 1)',
          'rgba(255, 159, 64, 1)',
          'rgba(0, 0, 0, 1)'
        ],
        borderWidth: 1
      }]
    };

    // config 
    const config = {
      type: 'bar',
      data,
      options: {
        scales: {
            x: {
                min: startDate,
                max: endDate,
                type: 'time',
                time: {
                    unit: 'day'
                },
            },
          y: {
            beginAtZero: true
          }
        }
      }
    };

    const myChart = new Chart(
      document.getElementById('myChart'),
      config
    );

