    <div class="chartCard">
      <div class="chartBox">
        <canvas id="myChart"></canvas>
        <form action="/statistics_two" method="get">
        Εβδομάδες πίσω:
        <input type="number" name="weeksback" id="weeksback" step="any"">
        <div id="productList"></div>
