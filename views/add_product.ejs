<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8"> 
    <title>Add Products</title>
</head>
<body>

    <form>
        <H2>Select Folders with Products and Prices</H2>
        <input type="file" name="file" id="files" multiple required>
        <button type="submit">Submit</button>
    </form>

    <br></br>
    <div id="delete_all">
        <label for="delete">Delete All :</label>
        <button id="delete_btn" onclick="Sure()">Delete</button>
    </div>
<script>
    const form = document.querySelector('form');
    form.addEventListener('submit', (e) => {
    
    e.preventDefault();
    // Prevents HTML handling submission
    const files = document.getElementById("files");
    const formData = new FormData();
    // Creates empty formData object
    // Appends value of text input
    for(let i =0; i < files.files.length; i++) {
        formData.append("files", files.files[i]);
    }
    console.log(...formData)
    // Appends value(s) of file input
    // Post data to Node and Express server:
    fetch('/add_product', {
        method: 'POST',
        body: formData, // Payload is formData object
    })
    .then(res => res.json())
    .then(data => console.log(data))
    

})

function Sure(){
    const del = document.getElementById("delete_all")
    let sure = `<label for="delete">Are you sure:</label>
                <button id="Yes" onclick="delete_all()">Yes</button>
                <button id="Cansel" onclick="reload()">Cancel</button>
                `

    del.innerHTML = `${sure}`
}

function reload(){
    location.reload();
}

function delete_all(){
    fetch('/delete_products', {
        method: 'POST',
    }).then(alert("All products deleted"))
    .then(location.reload())
}

</script>

</body>
</html>